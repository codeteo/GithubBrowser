<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.example.githubpublicrepos.features.main.MainActivity">

    <TextView
        android:id="@+id/tv_main_loading"
        android:text="@string/loading_repos"
        android:textAlignment="center" android:layout_gravity="center"
        android:layout_width="match_parent" android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_repos"
        app:layoutManager="LinearLayoutManager"
        android:layout_width="match_parent" android:layout_height="match_parent"/>

</LinearLayout>